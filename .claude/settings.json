{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(./configure.sh:*)",
      "Bash(./build.sh:*)",
      "Bash(./run_tests.sh:*)",
      "Bash(./build/Debug:*)",
      "Bash(find:*)",
      "Bash(bat:*)",
      "WebFetch(:*)",
      "WebSearch(:*)",
